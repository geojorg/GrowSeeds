<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:viewModels="clr-namespace:GrowSeeds.ViewModels"
             xmlns:i18n="clr-namespace:GrowSeeds.Helpers"
             x:DataType="viewModels:LoginViewModel"
             x:Class="GrowSeeds.Views.LoginPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Visual="Material"
             BackgroundImageSource="Welcome">

    <ContentPage.Content>
        <ScrollView x:DataType="viewModels:LoginViewModel">
            <Grid
            VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackLayout
                Grid.Row="0"
                Orientation="Vertical"
                HorizontalOptions="Center"
                Margin="0,100,0,0"
                VerticalOptions="Center">
                    <Label      
                       Text="GrowSeeds"
                       FontSize="39"
                       FontFamily="{StaticResource UbuntuBold}"
                       HorizontalTextAlignment="Center"
                       TextColor="White"/>
                    <Label 
                       Text="{i18n:TranslateExtension Tittle}"
                       FontSize="Body"
                       FontFamily="{StaticResource UbuntuBold}"
                       HorizontalTextAlignment="Center"
                       TextColor="White"/>
                </StackLayout>
                <Frame 
                CornerRadius="10"
                Grid.Row="1" 
                Margin="20,60,20,0" 
                Padding="0" 
                VerticalOptions="Start">
                    <Grid
                        VerticalOptions="FillAndExpand"
                        Padding="20">
                        <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackLayout
                        Grid.Column="0"
                        HorizontalOptions="FillAndExpand">
                        <Entry
                        BackgroundColor="Transparent"
                        Keyboard="Email"
                        Placeholder="Email"
                        Text="{Binding Email, Mode=TwoWay}"/>
                        <Label
                        Text="{i18n:TranslateExtension ValidEmail}"
                        Margin="1"
                        TextColor="{Binding EmailEmpty, Mode=TwoWay}"/>
                        <Entry
                        BackgroundColor="Transparent"
                        Keyboard="Plain"
                        Placeholder="{i18n:TranslateExtension Password}"
                        Text="{Binding Password, Mode=TwoWay}">
                                <Entry.Triggers>
                                    <DataTrigger
                                TargetType="Entry"
                                Binding="{Binding Source={x:Reference CheckBoxPassword}, Path=IsChecked}"
                                Value="false">
                                        <Setter Property="IsPassword" Value="True"/>
                                    </DataTrigger>
                                </Entry.Triggers>
                            </Entry>
                            <Label
                            Text="{i18n:TranslateExtension ValidPsw}"
                            Margin="1"
                            TextColor="{Binding PasswordEmpty, Mode=TwoWay}"/>
                        </StackLayout>
                        <StackLayout
                        Grid.Row="1"
                        Orientation="Horizontal"
                        VerticalOptions="StartAndExpand">
                            <CheckBox x:Name="CheckBoxPassword"
                        Color="#659880">
                            </CheckBox>
                            <Label
                            Text="{i18n:TranslateExtension ShowPsw}"
                            VerticalOptions="Center">
                            </Label>
                        </StackLayout>
                        <StackLayout
                            Grid.Row="2"
                            Orientation="Horizontal"
                            Margin="0,20,0,0"
                            VerticalOptions="CenterAndExpand">
                                <Switch
                                IsToggled="{Binding IsRemembered, Mode=TwoWay}"
                                ThumbColor="#659880"
                                OnColor="#AFAFAF"/>
                                <Label
                                Text="{i18n:TranslateExtension Remember}"
                                HorizontalOptions="StartAndExpand"
                                VerticalOptions="Center"/>
                                <Label
                                Text="{i18n:TranslateExtension ForgotPsw}"
                                TextColor="Blue"
                                VerticalOptions="Center"/>
                        </StackLayout>
                        <StackLayout
                    Margin="0,30,0,20"
                    Grid.Row="4"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    Orientation="Horizontal">
                    <Button
                    BackgroundColor="#659880"  
                    CornerRadius="25"
                    Command="{Binding LoginCommand}"
                    Text = "{i18n:TranslateExtension Login}"
                    TextColor="White"/>
                    <Button
                    BackgroundColor="#42AEE5"  
                    CornerRadius="25"
                    Command="{Binding RegisterCommand}"
                    Text = "{i18n:TranslateExtension Register}"
                    TextColor="White"/>
                        </StackLayout>
                    </Grid>
                </Frame>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>